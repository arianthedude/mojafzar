{
  "name": "mojafazr-electron",
  "version": "1.0.0",
  "description": "A minimal Electron app for connecting to your server",
  "author": "arian arian@arianthedude.ir",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^26",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^11.0.2"
  },
  "build": {
    "appId": "com.arian.mojafazr",
    "productName": "Mojafazr Electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
